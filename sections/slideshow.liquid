{% stylesheet %}
  .bg-wrapper{
    width:100%;
    height:400px;

  }
  .bg-wrapper img{
    width:100%;
    height:100%;
    object-fit:cover;
  }
{% endstylesheet %}

<section>
  {% for slide in section.blocks %}
    <h3>Hello bangladesh</h3>
    <div class="bg-wrapper">
      <img src="{{slide.settings.bg_img |  image_url: width:"500x500" }}" alt="" height="" loading="lazy">
    </div>
    <div class="content-wrapper">
      <div class="row">
        <div class="col-sm-6">
            <h2>{{slide.settings.title}}</h2>
            <p>{{slide.settings.sub_heading}}</p>
            <input type="text" name="" id="" placeholder="Enter Your Email Address">
        </div>
        <div class="col-sm-6">
          <img src="{{slide.settings.right_image | image_url:500x500: }}" alt="" height="" loading=""/>
        </div>
      </div>
    </div>
  {% endfor %}
  
</section>




{% schema %}
{
  "name": "slideshow",
  "settings": [
    
    ],
  "blocks": [
    {
      "name":"Slide",
      "type":"slide",
      "limit":3,
      "settings":[
        {
        "type": "image_picker",
        "id":"bg_img",
        "label":"Background Image"
       },{
        "type": "text",
        "id":"title",
        "label":"Write Slide Heading"
       },{
        "type": "text",
        "id":"sub_heading",
        "label":"Sub Heading"
       },{
        "type": "image_picker",
        "id":"right_image",
        "label":"Right Image"
       }
      ]
   
    }
    ],
  "presets": [
    {
      "name":"Slide Show Hero Section",
      "blocks": [
        {
          "type":"slide"
        }
      ]
    }
  ]
}
{% endschema %}